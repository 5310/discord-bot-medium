{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Store",
  "description": "A Store for per-Guild configuration",
  "default": {
    "spirits": []
  },
  "properties": {
    "spirits": {
      "type": "array",
      "description": "A list of all the Spirits configured for this Guild",
      "items": {
        "$ref": "#/$defs/Spirit"
      }
    }
  },
  "required": ["spirits"],
  "additionalItems": true,
  "$defs": {
    "Trigger": {
      "type": "string",
      "format": "regex",
      "description": "The regex trigger for this invocation"
    },
    "Endpoint": {
      "type": "string",
      "format": "iri",
      "description": "The endpoint to invoke"
    },
    "Example": {
      "type": "array",
      "description": "An example invocations",
      "items": [
        {
          "type": "string",
          "description": "The example invocation"
        },
        {
          "type": "string",
          "description": "The resulting response"
        }
      ]
    },
    "Examples": {
      "type": "array",
      "description": "A list of example invocations",
      "additionalItems": true,
      "items": {
        "$ref": "#/$defs/Example"
      }
    },
    "Reply": {
      "type": "object",
      "title": "Reply Spirit",
      "examples": [
        {
          "type": "reply",
          "trigger": "/^(hullo|hello|hi|hey).*/i",
          "endpoint": "https://example.com/hello",
          "description": "Greets you"
        }
      ],
      "properties": {
        "type": {
          "constant": "reply"
        },
        "trigger": {
          "$ref": "#/$defs/Trigger"
        },
        "endpoint": {
          "$ref": "#/$defs/Endpoint"
        },
        "description": {
          "type": "string"
        },
        "examples": {
          "$ref": "#/$defs/Examples"
        }
      },
      "required": ["type", "trigger", "endpoint"]
    },
    "React": {
      "type": "object",
      "title": "React Spirit",
      "examples": [
        {
          "type": "react",
          "trigger": "/(^yo|so+ metal|very metal)/i",
          "endpoint": "https://example.com/ðŸ¤˜",
          "description": "Gives you the devil horns"
        }
      ],
      "properties": {
        "type": {
          "constant": "react"
        },
        "trigger": {
          "$ref": "#/$defs/Trigger"
        },
        "endpoint": {
          "$ref": "#/$defs/Endpoint"
        },
        "description": {
          "type": "string"
        },
        "examples": {
          "$ref": "#/$defs/Examples"
        }
      },
      "required": ["type", "trigger", "endpoint"]
    },
    "Alias": {
      "type": "object",
      "title": "Alias",
      "examples": [
        {
          "type": "alias",
          "alias": "hw",
          "expansion": "Hello World"
        }
      ],
      "properties": {
        "type": {
          "constant": "alias"
        },
        "alias": {
          "type": "string",
          "description": "The abbreviated alias to expand"
        },
        "expansion": {
          "type": "string",
          "description": "The expansion of the alias invoked"
        },
        "examples": {
          "$ref": "#/$defs/Examples"
        }
      },
      "required": ["type", "alias", "expansion"]
    },
    "Spirit": {
      "description": "A list of all the Spirits configured for this Guild",
      "anyOf": [
        {
          "$ref": "#/$defs/Reply"
        },
        {
          "$ref": "#/$defs/React"
        },
        {
          "$ref": "#/$defs/Alias"
        }
      ]
    }
  }
}
